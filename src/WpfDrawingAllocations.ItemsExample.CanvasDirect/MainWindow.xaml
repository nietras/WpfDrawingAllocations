<Window x:Class="WpfDrawingAllocations.ItemsExample.CanvasDirect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDrawingAllocations.ItemsExample.CanvasDirect"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1280" Background="DarkBlue"
        WindowState="Maximized">
    <Grid FocusManager.FocusedElement="{Binding ElementName=Start}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Start" FontSize="48" Margin="10" Click="Start_Click">Start</Button>
        <Viewbox Grid.Row="1">
            <Canvas x:Name="Canvas" Background="Black"/>
        </Viewbox>
    </Grid>
</Window>
